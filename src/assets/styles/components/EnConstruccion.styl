*
   margin: 0
   padding: 0

body
   background-color: #f0e9dd
   font-family: Helvetica
   height: 100%

.container
   width: 80%
   height: 100%
   margin: 20px auto

header
   width: 100%
   height: 150px
   text-align: center
   line-height: 150px

h1
   font-size:50px
   text-shadow: 2px 2px 2px #a5a2a2


.contenido
   width: calc(100%-40px)
   min-width: 250px
   position: relative
   margin: 20px

   img
      width: 35%
      display: block
      margin: 0 auto

footer
   text-align: center
   margin: 20px

   h2
      padding-top: 20px

   p
      padding-top: 10px

      a
         color: #ff4a00